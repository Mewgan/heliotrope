<!-- Section: trainer -->
<section id="trainer" class="bg-lighter">
    <div class="container pt-60 pb-0">
        <div class="section-title text-center">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h2 class="text-uppercase title">Notre <span
                                class="text-black font-weight-300">Equipe</span></h2>
                </div>
            </div>
        </div>
        <div class="section-content">
            <div class="row ml-md-0">
                <div class="owl-carousel-4col">
                    {% for member in team %}
                        <div class="item">
                            <div class="trainer-item">
                                <div class="trainer-thumb"><img src="{{ img(member.photo.path) }}" alt="{{ member.photo.alt }}"
                                                                class="img-fullwidth img-responsive"></div>
                                <div class="trainer-info">
                                    <div class="trainer-biography">
                                        <h3 class="text-white">{{ member.full_name }}</h3>
                                        <h5 class="text-white">{{ member.description }}</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>
