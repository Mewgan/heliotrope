<!-- Section: trainer -->
<section id="trainer" class="bg-lighter">
    <div class="container pt-60 pb-0">
        <div class="section-title text-center">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h2 class="text-uppercase title">Notre <span
                                class="text-black font-weight-300">Equipe</span></h2>
                </div>
            </div>
        </div>
        <div class="section-content">
            <div class="row ml-md-0">
                <div class="owl-carousel-4col">
                    {% for member in team %}
                        <div class="item">
                            <div class="trainer-item">
                                {% if member.photo is null %}
                                <div class="trainer-thumb">
                                    <img src="{{ asset('user-photo.png') }}" alt="default photo"
                                                            class="img-fullwidth img-responsive">
                                </div>
                                <div class="trainer-info">
                                {% else %}
                                    <div class="trainer-thumb">
                                        <img src="{{ img(member.photo.path) }}" alt="{{ member.photo.alt }}"
                                             class="img-fullwidth img-responsive">
                                    </div>
                                {% endif %}
                                <div class="trainer-info">
                                    <div class="trainer-biography">
                                        <h3 class="text-black">{{ member.full_name }}</h3>
                                        <h5 class="text-black">
                                            {% for role in member.roles %}
                                                {{ role.name }}
                                            {% endfor %}
                                        </h5>
                                        <p class="text-black">{{ member.description | raw }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>
