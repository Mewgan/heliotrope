{% extends template_from_string(data.website_layout) %}

{% block css %}

{% endblock %}

{% block page %}
    <!-- Section: home -->
    <section id="home" class="divider parallax fullscreen" data-parallax-ratio="0.7"
             data-bg-img="{{ field_render('subheader', 'page@'~data.page.id).path }}">
        <div class="display-table">
            <div class="display-table-cell">
                <div class="container pt-200 pb-200">
                    <div class="row">
                        <div class="col-md-12 text-{{ field_render('homepage_header_text_align', 'page@'~data.page.id) }}">
                            {{ field_render('homepage_header_text', 'page@'~data.page.id) | raw }}
                            <a href="{{ booking_link }}"
                               class="btn btn-theme-colored btn-circled btn-lg smooth-scroll-to-target mt-10">RÃ©server</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section: About-->
    <section id="about">
        <div class="container">
            <div class="section-content">
                <div class="row">
                    <div class="col-md-3">
                        {% set about_us = field_render('homepage_about_us', 'page@'~data.page.id) %}
                        <div class="about-info">
                            <h4 class="text-uppercase letter-space-2 mb-0">{{ about_us.title }}</h4>
                            <p class="font-13">{{ about_us.description }}</p>
                            <a href="{{ link('/article/:slug',{'slug': about_us.slug}) }}" class="btn btn-theme-colored btn-sm">Voir plus</a>
                        </div>
                    </div>
                    {{ content_render('list_home_service') }}
                    <div class="col-md-3">
                        <div class="opening-hours p-15 pt-20 pb-60" style="background: black;">
                            <h4 class="line-bottom text-white font-weight-400 mt-0">Horaires d'ouverture</h4>
                            {{ opening_hours | raw }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section: trainer -->
    <section id="trainer" class="bg-lighter">
        <div class="container pt-60 pb-0">
            <div class="section-title text-center">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <h2 class="text-uppercase title">Our hair <span
                                    class="text-black font-weight-300">Experts</span></h2>
                        <p class="text-uppercase letter-space-4">Best Hair Care Theme on Themeforest.</p>
                    </div>
                </div>
            </div>
            <div class="section-content">
                <div class="row ml-md-0">
                    <div class="owl-carousel-4col">
                        {% set teams = field_render('teams', 'page@'~data.page.id) %}
                        {% for team in teams %}
                            <div class="item">
                                <div class="trainer-item">
                                    <div class="trainer-thumb"><img src="{{ img(team.image.path) }}" alt="{{ team.image.alt }}"
                                                                    class="img-fullwidth img-responsive"></div>
                                    <div class="trainer-info">
                                        <div class="trainer-biography">
                                            <h3 class="text-white">{{ team.name }}</h3>
                                            <h5 class="text-white">{{ team.description }}</h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>

   {{ content_render('list_home_news') }}

    <!-- Section: Clients -->
    <section class="divider bg-light">
        <div class="container pt-30 pb-30">
            <div class="section-content">
                <div class="row">
                    <div class="owl-carousel-6col clients-logo carousel">
                        {% set partners = field_render('partners', 'page@'~data.page.id) %}
                        {% for partner in partners %}
                            <div class="item">
                                <a>
                                    <img src="{{ img(partner.image.path) }}" alt="{{ partner.image.alt }}">
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
