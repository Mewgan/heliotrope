{% extends template_from_string(data.website_layout) %}

{% block page %}
    <!-- Section: home -->
    <section id="home" class="divider parallax fullscreen" data-parallax-ratio="0.7"
             data-bg-img="{{ img(field_render('subheader', 'page').path) }}">
        <div class="display-table">
            <div class="display-table-cell">
                <div class="container pt-200 pb-200">
                    <div class="row">
                        <div class="col-md-12">
                            {{ include(template_from_string(field_render('homepage_header_text', 'page'))) | raw }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section: About-->
    <section id="about">
        <div class="container">
            <div class="section-content">
                <div class="row">
                    <div class="col-md-3">
                        {% set about_us = field_render('homepage_about_us', 'page') %}
                        {% if about_us.title != '' %}
                        <div class="about-info">
                            <h4 class="text-uppercase letter-space-2 mb-0">{{ about_us.title }}</h4>
                            <p class="font-13">{{ about_us.description }}</p>
                            <a href="{{ link('module:post.type:dynamic.action:read',{'slug': about_us.slug}) }}" class="btn btn-theme-colored btn-sm">Voir plus</a>
                        </div>
                        {% endif %}
                    </div>
                    {{ content_render('list_home_service') | raw }}
                    <div class="col-md-3">
                        <div class="opening-hours p-15 pt-20 pb-60" style="background: black;">
                            <h4 class="line-bottom text-white font-weight-400 mt-0">Horaires d'ouverture</h4>
                            {{ opening_hours | raw }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {{ content_render('team') | raw }}

    {{ content_render('list_home_news') | raw }}

    <!-- Section: Clients -->
    <section class="divider bg-light">
        <div class="container pt-30 pb-30">
            <div class="section-title text-center">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <h2 class="text-uppercase title">Nos <span
                                    class="text-black font-weight-300">Partenaires</span></h2>
                    </div>
                </div>
            </div>
            <div class="section-content">
                <div class="row">
                    <div class="owl-carousel-6col clients-logo carousel">
                        {{ content_render('list_home_partners') | raw }}
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
