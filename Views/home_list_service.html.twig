<!-- section begin -->
<section id="section-services-tab">
    <div class="container">
        <div class="row wow fadeIn">
            <div class="col-md-6 col-md-offset-3 text-center">
                <h1 class="font48">Nos Services</h1>
                <div class="small-border wow zoomIn" data-wow-delay=".3s" data-wow-duration=".3s"></div>
                <div class="spacer-single"></div>
            </div>

            <div class="clearfix"></div>
            {% for post in posts %}
                {% set params = {} %}
                {% for arg in args %}
                    {% if arg.value != '' %}
                        {% set params = params|merge({(arg.route):arg.value}) %}
                    {% else %}
                        {% if arg.alias == 'p' %}
                            {% set params = params|merge({(arg.route):attribute(post,arg.column)}) %}
                        {% elseif arg.alias == 'c' %}
                            {% set params = params|merge({(arg.route):attribute(post.categories[0],arg.column)}) %}
                        {% endif %}
                    {% endif %}
                {% endfor %}
                <div class="col-md-2 col-sm-4 col-xs-6">
                    <div class="service-item">

                        <a href="{{ link(route,params) }}">
                            <img data-src="{{ img(post.thumbnail.path) }}" alt="{{ post.thumbnail.alt }}" class="lazyload pic-grey wow zoomIn" data-wow-delay="1.1s" />
                            <h3>{{ post.title }}</h3>
                        </a>

                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
<!-- section close -->